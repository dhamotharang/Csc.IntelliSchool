<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:ns="clr-namespace:Csc.Wpf"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tlk="http://schemas.telerik.com/2008/xaml/presentation">
  <Style TargetType="{x:Type ns:ViewRoot}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ns:ViewRoot}">
          <ContentPresenter Content="{TemplateBinding Content}"
                                          Margin="{TemplateBinding Padding}"/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>

  <Style x:Key="CheckBoxTreeViewStyle" TargetType="tlk:RadTreeView">
    <Setter Property="IsOptionElementsEnabled" Value="True" />
    <Setter Property="Padding" Value="-15 0 0 0" />
    <Setter Property="BorderBrush" Value="{tlk:Windows8Resource ResourceKey=BasicBrush}" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <Style x:Key="WindowButtonStyle" TargetType="tlk:RadButton">
    <Setter Property="Padding" Value="15 3" />
    <Setter Property="MinWidth"  Value="70" />
  </Style>
</ResourceDictionary>